<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NextAct">

    <Button
        android:id="@+id/buttonFacile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:text="Facile"
        app:layout_constraintBottom_toTopOf="@+id/buttonMoyenne"
        app:layout_constraintEnd_toEndOf="@+id/buttonMoyenne"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/buttonMoyenne"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMoyenne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="Moyenne"
        app:layout_constraintEnd_toEndOf="@+id/buttonDifficile"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/buttonDifficile"
        app:layout_constraintTop_toBottomOf="@+id/buttonFacile" />

    <Button
        android:id="@+id/buttonDifficile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:text="Difficile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMoyenne" />
</androidx.constraintlayout.widget.ConstraintLayout>